<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @product.name %>
</p>

<p>
  <b>Quantity:</b>
  <%= @product.quantity %>
</p>

<p>
  <b>Category:</b>
  <%= @product.category.name %>
</p>


<ul>
  <% @product.suppliers.each do |supplier| %>
    <li><%= link_to supplier.name, supplier %></li>
  <% end %>
</ul>


<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
